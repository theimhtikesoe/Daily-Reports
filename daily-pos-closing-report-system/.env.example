PORT=4000
NODE_ENV=development

# PostgreSQL (recommended for Vercel managed DB)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# MySQL fallback (optional)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=daily_pos_reports
DB_AUTO_INIT=true
DB_REQUIRE_ON_STARTUP=true

# Loyverse API
LOYVERSE_API_TOKEN=your_loyverse_token
LOYVERSE_API_BASE_URL=https://api.loyverse.com/v1.0
LOYVERSE_MONEY_DIVISOR=1
LOYVERSE_TIMEZONE=Asia/Bangkok

# Optional cron autosync at 23:59 local server time
AUTO_SYNC_ENABLED=false
AUTO_SYNC_TIME=59 23 * * *
